<idea-plugin>
    <id>de.tuda.securecoder</id>
    <name>SecureCoder</name>
    <vendor email="sekretariat@st.informatik.tu-darmstadt.de" url="https://www.stg.tu-darmstadt.de/">Software Technology Group at TU Darmstadt</vendor>
    <version>0.0.2</version>
    <description><![CDATA[
        SecureCoder brings security to your IDE by AI suggestions, and running quick critics before code lands.
    ]]></description>
    <depends>com.intellij.modules.platform</depends>
    <resource-bundle>messages.SecureCoderBundle</resource-bundle>
    <!--<depends optional="true">com.intellij.modules.java</depends>-->

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="securecoder"
                    anchor="right"
                    factoryClass="de.tuda.stg.securecoder.plugin.SecureCoderAiToolWindowFactory"/>
        <applicationConfigurable id="de.tuda.securecoder.settings"
                                 parentId="tools"
                                 key="settings.configurable.display.name"
                                 instance="de.tuda.stg.securecoder.plugin.settings.SecureCoderSettingsConfigurable"/>
        <notificationGroup id="securecoder"
                           displayType="BALLOON"
                           key="notification.group.name"/>
    </extensions>
</idea-plugin>
