<idea-plugin>
    <id>de.tuda.securecoder</id>
    <name>SecureCoder</name>
    <vendor email="dev@yourorg.com" url="https://yourorg.com">Your Org</vendor>
    <version>0.0.1</version>
    <description><![CDATA[
        SecureCoder brings security to your IDE by AI suggestions, and running quick critics before code lands.
    ]]></description>
    <depends>com.intellij.modules.platform</depends>
    <!--<depends optional="true">com.intellij.modules.java</depends>-->
    <actions>
        <action id="de.tuda.securecoder.plugin.HelloAction"
                class="de.tuda.securecoder.plugin.HelloAction"
                text="SecureCoder: Say Hello"
                description="Shows a hello message">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
